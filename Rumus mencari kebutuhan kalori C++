#include <iostream>
using namespace std;

int main() {
	float Berat, Tinggi, Umur, Kalori;
	cout<<"Mengetahui kebutuhan kalori pria :"<<endl;
	
	cout<<"Masukkan berat :";cin>>Berat;
	
	cout<<"Masukkan tinggi :";cin>>Tinggi;
	
	cout<<"Masukkan umur :";cin>>Umur;
	
	cout<<"Masukkan kalori :";cin>>Kalori;
	
	Kalori=66.5+(13.75 * Berat) + (5.003 * Tinggi) - (6.75 * Umur);
	
	cout<<"Kalori yang dibutuhkan adalah :"<<Kalori<<"kkal";
	
	return 0;
}
